<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/home_navigation">

    <fragment
        android:id="@+id/home_navigation"
        android:name="edu.example.broders.englishwords.home.HomeFragment"
        tools:layout="@layout/home_fragment"
        android:label="Home">
        <action
            android:id="@+id/action_home_to_quizz_settings"
            app:destination="@id/quizz_settings_navigation"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/quizz_settings_navigation"
        android:name="edu.example.broders.englishwords.quizz_settings.QuizzSettingsFragment"
        tools:layout="@layout/quizz_setting_fragment"
        android:label="QuizzSettings">
        <action
            android:id="@+id/action_quizz_settings_to_home"
            app:destination="@id/home_navigation"
            app:launchSingleTop="true" />
    </fragment>


</navigation>