<?xml version="1.0" encoding="utf-8"?>

<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/question_activity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/gradient"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:weightSum="4">

        <TextView
            android:id="@+id/theme_questions"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFE2E1"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#FFE2E1"
            android:textSize="50sp" />

        <EditText
            android:id="@+id/reponse_questions"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:elegantTextHeight="true"
            android:hint="Traduisez ici"
            android:inputType="text"
            android:shadowColor="#FFE2E1"
            android:textAlignment="center"
            android:textColor="#FFE2E1"
            android:textColorHighlight="#FFE2E1"
            android:textColorHint="#FFE2E1"
            android:textColorLink="#FFE2E1"
            android:textSize="50sp" />

        <Button
            android:id="@+id/confirmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/mybouton"
            android:text="Valider"
            android:textColor="#FFE2E1"
            android:textSize="30sp" />

    </LinearLayout>

</layout>
